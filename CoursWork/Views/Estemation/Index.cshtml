@model IEnumerable<CoursWork.Models.User>
@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="SelectUser" asp-controller="Estemation">
            <label for="select_1">Select list:</label>
            <select class="form-control" name="id">
                @{
                    foreach (var user in Model)
                    {

                        <option value="@user.Id">@user.Name</option>
                    }
                }
            </select>
            <label>Выберите количество компетенций:</label>
            <select class="form-control" name="count">
                @{
                    int AllCount = 0;
                    foreach (var user in Model)
                    {
                        foreach (var compenetces in user.Position.Competences)
                        {
                            AllCount++;
                        }
                    }
                    for (var i = 1; i <= AllCount; i++)
                    {

                        <option value="@i">@i</option>
                    }
                }
            </select>
            <div class="form-group">
                <input type="submit" class="btn btn-default" />
            </div>
        </form>

    </div>
</div>
